<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/date_side_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:text="날짜"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id ="@+id/description_side_txt"
        android:text="처방알약"
        android:layout_alignTop="@+id/date_side_txt"
        android:layout_toEndOf="@+id/date_side_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideeffect_txt"
        android:layout_marginRight="10dp"
        android:text="부작용"
        android:layout_alignTop="@+id/description_side_txt"
        android:layout_toEndOf="@+id/description_side_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
