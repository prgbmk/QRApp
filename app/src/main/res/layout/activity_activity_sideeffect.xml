<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.test.mungipark.qrapp.activity_sideeffect">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전화면"
        android:id="@+id/backBtn_side"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/sideeffect_title_listView"
        android:background="#c9c9c9"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideeffect_listView"
        android:background="@color/switch_thumb_normal_material_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sideeffect_title_listView"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/imageView3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="박문기"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="복약 관리 시스템"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:layout_above="@+id/backBtn_side"
        android:layout_alignParentStart="true"
        android:src="@drawable/alert_txtbox"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
